{% block commentsForm %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
{% for message in app.flashes('notice') %}
    <div class="text-success">{{ message }}</div>
{% endfor %}


<h4 class="mb-3">Add your comment</h4>
        <div class="form-row">
            <div class="form-group col-md-12">

                <input  class="form-control mb-1"  placeholder="Author" id="{{ form_widget(form.authorName) }}
            </div>
            <div class="form-group col-md-12">

                <textarea class="form-control mb-1"  placeholder="Write you message" id="{{ form_widget(form.body) }}</textarea>
            </div>
        </div>


        <button type="submit" class="btn btn-primary pull-right mb-4" id= "{{ form_widget(form.submit) }}</button>

    {{ form_end(form) }}

{% endblock %}
